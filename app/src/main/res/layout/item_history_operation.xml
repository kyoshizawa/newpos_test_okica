<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="jp.mcapps.android.multi_payment_terminal.ui.Converters" />
        <variable
            name="operationData"
            type="jp.mcapps.android.multi_payment_terminal.database.history.operation.OperationData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/grid_history_operation"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/common_margin_small"
            android:background="@color/black"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/value_history_operation_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin_small"
            android:text="@{Converters.dateToString(operationData.operationDate)}"
            android:textColor="@color/black"
            android:textSize="@dimen/driver_code_history_text_size"
            app:layout_constraintStart_toStartOf="@id/grid_history_operation"
            app:layout_constraintTop_toBottomOf="@id/grid_history_operation" />

        <TextView
            android:id="@+id/value_history_operation_screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_small"
            android:text="@{operationData.screenName}"
            android:textColor="@color/black"
            android:textSize="@dimen/driver_code_history_text_size"
            app:layout_constraintStart_toStartOf="@id/value_history_operation_date"
            app:layout_constraintTop_toBottomOf="@id/value_history_operation_date" />

        <TextView
            android:id="@+id/mark_operation_colon_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_small"
            android:text="："
            android:textColor="@color/black"
            android:textSize="@dimen/driver_code_history_text_size"
            app:layout_constraintStart_toEndOf="@id/value_history_operation_screen_name"
            app:layout_constraintTop_toTopOf="@id/value_history_operation_screen_name" />

        <TextView
            android:id="@+id/value_history_operation_detail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_small"
            android:text="@{operationData.operationName}"
            android:textColor="@color/black"
            android:textSize="@dimen/driver_code_history_text_size"
            app:layout_constraintStart_toEndOf="@id/mark_operation_colon_1"
            app:layout_constraintTop_toTopOf="@id/mark_operation_colon_1" />

        <TextView
            android:id="@+id/value_history_operation_dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_small"
            android:text="@{operationData.dialogName}"
            android:textColor="@color/black"
            android:textSize="@dimen/driver_code_history_text_size"
            app:layout_constraintStart_toStartOf="@id/value_history_operation_screen_name"
            app:layout_constraintTop_toBottomOf="@id/value_history_operation_screen_name" />

        <TextView
            android:id="@+id/label_history_operation_detail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_small"
            android:textColor="@color/black"
            android:textSize="@dimen/driver_code_history_text_size"
            app:layout_constraintStart_toStartOf="@id/value_history_operation_dialog_name"
            app:layout_constraintTop_toBottomOf="@id/value_history_operation_dialog_name" />

        <TextView
            android:id="@+id/mark_operation_colon_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_small"
            android:text="："
            android:textColor="@color/black"
            android:textSize="@dimen/driver_code_history_text_size"
            app:layout_constraintStart_toEndOf="@id/label_history_operation_detail2"
            app:layout_constraintTop_toTopOf="@id/label_history_operation_detail2" />

        <TextView
            android:id="@+id/value_history_operation_detail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_small"
            android:textColor="@color/black"
            android:textSize="@dimen/driver_code_history_text_size"
            app:layout_constraintStart_toEndOf="@id/mark_operation_colon_2"
            app:layout_constraintTop_toTopOf="@id/mark_operation_colon_2" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_operation_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="value_history_operation_detail2,mark_operation_colon_2,label_history_operation_detail2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>