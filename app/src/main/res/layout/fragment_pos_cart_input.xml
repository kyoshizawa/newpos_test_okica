<?xml version="1.0" encoding="utf-8"?>
<layout
    android:id="@+id/fragment_driver_code"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".ui.driver_code.DriverCodeFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <import type="jp.mcapps.android.multi_payment_terminal.AppPreference" />
        <variable
            name="posHandlers"
            type="jp.mcapps.android.multi_payment_terminal.ui.pos.PosEventHandlers" />
        <variable
            name="sharedViewModel"
            type="jp.mcapps.android.multi_payment_terminal.SharedViewModel" />
        <variable
            name="posViewModel"
            type="jp.mcapps.android.multi_payment_terminal.ui.pos.PosViewModel" />
        <variable
            name="productSelectViewModel"
            type="jp.mcapps.android.multi_payment_terminal.ui.pos.ProductSelectViewModel" />
        <variable
            name="inputCartViewModel"
            type="jp.mcapps.android.multi_payment_terminal.ui.pos.InputCartViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_primary"
        android:orientation="vertical">

        <include
            android:id="@+id/app_pos_bar"
            layout="@layout/app_bar_pos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:sharedViewModel='@{sharedViewModel}'
            bind:posViewModel='@{posViewModel}'
            bind:posHandlers='@{posHandlers}'
            bind:productSelectViewModel='@{productSelectViewModel}'
            android:visibility='@{sharedViewModel.actionBarMode == sharedViewModel.ActionBarMode.POS ? View.VISIBLE : View.GONE}'
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text='@{inputCartViewModel.title, default="数量の変更"}'
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/price_layout"/>

            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title">

                <FrameLayout
                    android:id="@+id/total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:background="@drawable/stroke_gray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/common_margin_small"
                        android:paddingHorizontal="@dimen/common_margin"
                        android:gravity="end"
                        android:hint="@{inputCartViewModel.originalNumber}"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:clickable="false"
                        android:longClickable="false"
                        android:cursorVisible="false"
                        android:text="@{inputCartViewModel.inputNumber}"
                        android:textSize="48sp" />

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="@dimen/common_margin_small"-->
<!--                        android:layout_marginStart="@dimen/common_margin_small"-->
<!--                        android:background="@color/bg_primary"-->
<!--                        android:text="個数" />-->

                </FrameLayout>

                <ImageView
                    android:id="@+id/back_delete"
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/common_margin_small"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:onClick='@{view -> inputCartViewModel.backDelete()}'
                    android:src="@drawable/manual_input_clear"
                    android:text="@string/btn_common_cancel_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/number_layout_789"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/price_layout">

                <Button
                    android:id="@+id/btn_driver_code_numbers_7"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:onClick='@{() -> inputCartViewModel.inputNumber("7")}'
                    android:text="@string/btn_common_num_7" />

                <Button
                    android:id="@+id/btn_driver_code_numbers_8"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:onClick='@{() -> inputCartViewModel.inputNumber("8")}'
                    android:text="@string/btn_common_num_8" />

                <Button
                    android:id="@+id/btn_driver_code_numbers_9"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:onClick='@{() -> inputCartViewModel.inputNumber("9")}'
                    android:text="@string/btn_common_num_9" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/number_layout_456"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/number_layout_789">

                <Button
                    android:id="@+id/btn_driver_code_numbers_4"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:onClick='@{() -> inputCartViewModel.inputNumber("4")}'
                    android:text="@string/btn_common_num_4" />

                <Button
                    android:id="@+id/btn_driver_code_numbers_5"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:onClick='@{() -> inputCartViewModel.inputNumber("5")}'
                    android:text="@string/btn_common_num_5" />

                <Button
                    android:id="@+id/btn_driver_code_numbers_6"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:onClick='@{() -> inputCartViewModel.inputNumber("6")}'
                    android:text="@string/btn_common_num_6" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/number_layout_123"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/number_layout_456">

                <Button
                    android:id="@+id/btn_driver_code_numbers_1"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:onClick='@{() -> inputCartViewModel.inputNumber("1")}'
                    android:text="@string/btn_common_num_1" />

                <Button
                    android:id="@+id/btn_driver_code_numbers_2"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:onClick='@{() -> inputCartViewModel.inputNumber("2")}'
                    android:text="@string/btn_common_num_2" />

                <Button
                    android:id="@+id/btn_driver_code_numbers_3"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:onClick='@{() -> inputCartViewModel.inputNumber("3")}'
                    android:text="@string/btn_common_num_3" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/number_layout_0clear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/number_layout_123">

                <Button
                    android:id="@+id/btn_driver_code_numbers_0"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:onClick='@{() -> inputCartViewModel.inputNumber("0")}'
                    android:text="@string/btn_common_num_0" />

                <Button
                    android:id="@+id/btn_driver_code_clear"
                    style="@style/StyleBasicButtonOther"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="4"
                    android:backgroundTint="@color/btn_common_clear"
                    android:onClick='@{() -> inputCartViewModel.correct()}'
                    android:tag="@string/btn_common_clear_horizontal"
                    android:text="@string/btn_common_clear_horizontal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/basic_other_btn_text_size_large" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/number_layout_0clear">

                <Button
                    android:id="@+id/btn_driver_code_enter"
                    style="@style/StyleBasicButtonOther"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:backgroundTint="@color/btn_common_enter"
                    android:onClick='@{() -> inputCartViewModel.enterCount()}'
                    android:visibility='@{inputCartViewModel.isInputTypePrice ? View.GONE : View.VISIBLE, default=visible}'
                    android:tag="数量の変更"
                    android:text="@string/btn_common_enter_horizontal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/basic_other_btn_text_size_large" />

                <Button
                    android:id="@+id/btn_change_price_enter"
                    style="@style/StyleBasicButtonOther"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:backgroundTint="@color/btn_common_enter"
                    android:onClick='@{() -> inputCartViewModel.enterUnitPrice()}'
                    android:visibility='@{inputCartViewModel.isInputTypePrice ? View.VISIBLE : View.GONE, default=visible}'
                    android:tag="単価の変更"
                    android:text="@string/btn_common_enter_horizontal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/basic_other_btn_text_size_large" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout >
</layout>
