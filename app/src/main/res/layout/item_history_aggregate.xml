<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="jp.mcapps.android.multi_payment_terminal.ui.Converters" />
        <variable
            name="aggregateData"
            type="jp.mcapps.android.multi_payment_terminal.database.history.aggregate.AggregateData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/grid_history_aggregate"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/common_margin"
            android:background="@color/black"
            android:textAlignment="viewStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/value_history_aggregate_start_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_small"
            android:layout_marginTop="@dimen/common_margin"
            android:text="@{aggregateData.aggregateStartDatetime.substring(0,aggregateData.aggregateStartDatetime.length() - 3)}"
            android:textSize="26sp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/grid_history_aggregate"/>

        <TextView
            android:id="@+id/mark_tilde"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_small"
            android:text="～"
            android:textSize="26sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/value_history_aggregate_start_date"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/value_history_aggregate_end_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{aggregateData.aggregateEndDatetime.substring(0,aggregateData.aggregateEndDatetime.length() - 3)}"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/common_margin_small"
            app:layout_constraintTop_toBottomOf="@id/value_history_aggregate_start_date"
            app:layout_constraintStart_toEndOf="@id/mark_tilde"/>

        <Button
            android:id="@+id/btn_aggregate_reprinting"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_btn_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/common_margin"
            android:text="再印刷"
            android:textSize="@dimen/driver_code_history_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/value_history_aggregate_start_date"
            app:layout_constraintBottom_toBottomOf="@id/value_history_aggregate_end_date"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>