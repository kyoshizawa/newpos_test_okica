        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_amount_input_flat_rate"
            android:textSize="@dimen/basic_other_btn_text_size_large"
            android:textColor="@color/black"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="@+id/btn_amount_input_flat_rate"
            app:layout_constraintStart_toStartOf="@+id/btn_amount_input_flat_rate"
            app:layout_constraintEnd_toEndOf="@+id/btn_amount_input_flat_rate"
            app:layout_constraintBottom_toBottomOf="@+id/btn_amount_input_flat_rate"/>
        -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_amount_input_enter"
            android:textSize="@dimen/basic_other_btn_text_size_large"
            android:textColor="@color/black"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="@+id/btn_amount_input_enter"
            app:layout_constraintStart_toStartOf="@+id/btn_amount_input_enter"
            app:layout_constraintEnd_toEndOf="@+id/btn_amount_input_enter"
            app:layout_constraintBottom_toBottomOf="@+id/btn_amount_input_enter"/>

        <TextView
            android:id="@+id/text_amount_input_reset_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/btn_amount_input_cancel"
            app:layout_constraintStart_toStartOf="@id/btn_amount_input_cancel"
            app:layout_constraintEnd_toEndOf="@id/btn_amount_input_cancel"
            app:layout_constraintBottom_toTopOf="@+id/text_amount_input_reset_2"
            app:layout_constraintVertical_chainStyle="packed"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/text_amount_input_reset_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_amount_input_reset_2"
            android:textSize="@dimen/basic_other_btn_text_size_small"
            android:textColor="@color/black"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@id/text_amount_input_reset_1"
            app:layout_constraintStart_toStartOf="@id/btn_amount_input_cancel"
            app:layout_constraintEnd_toEndOf="@id/btn_amount_input_cancel"
            app:layout_constraintBottom_toBottomOf="@+id/btn_amount_input_cancel"/>

        <TextView
            android:id="@+id/text_amount_input_fix_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_amount_input_fix_1"
            android:textSize="@dimen/basic_other_btn_text_size_large"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/btn_amount_input_fix"
            app:layout_constraintStart_toStartOf="@id/btn_amount_input_fix"
            app:layout_constraintEnd_toEndOf="@id/btn_amount_input_fix"
            app:layout_constraintBottom_toTopOf="@+id/text_amount_input_fix_2"
            app:layout_constraintVertical_chainStyle="packed"/>

        <TextView
            android:id="@+id/text_amount_input_fix_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_amount_input_fix_2"
            android:textSize="@dimen/basic_other_btn_text_size_large"
            android:textColor="@color/black"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@id/text_amount_input_fix_1"
            app:layout_constraintStart_toStartOf="@id/btn_amount_input_fix"
            app:layout_constraintEnd_toEndOf="@id/btn_amount_input_fix"
            app:layout_constraintBottom_toBottomOf="@+id/btn_amount_input_fix"/>
