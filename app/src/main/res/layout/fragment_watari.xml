<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".ui.credit_card.CreditCardScanFragment"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <import type="jp.mcapps.android.multi_payment_terminal.ui.others.WatariViewModel.UIStates" />
        <variable
            name="viewModel"
            type="jp.mcapps.android.multi_payment_terminal.ui.others.WatariViewModel" />
        <variable
            name="sharedViewModel"
            type="jp.mcapps.android.multi_payment_terminal.SharedViewModel" />
        <variable
            name="commonHeadViewModel"
            type="jp.mcapps.android.multi_payment_terminal.ui.common_head.CommonHeadViewModel" />
        <variable
            name="handlers"
            type="jp.mcapps.android.multi_payment_terminal.ui.others.WatariEventHandlers" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/fragment_common_head"
                bind:viewModel='@{commonHeadViewModel}'
                bind:sharedViewModel='@{sharedViewModel}' />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:rotation='@{sharedViewModel.isScreenInversion ? 180 : 0}'>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/stroke_gray"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_margin="@dimen/common_margin"
                    android:text="取引種別"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/stroke_gray"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_margin="@dimen/common_margin"
                    android:text='@{viewModel.businessType}'
                    android:layout_weight="1"/>


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility='@{viewModel.state == UIStates.Read ? View.VISIBLE : View.GONE}' >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_padding_large"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginBottom="70dp"
                    android:layout_weight="1">

                    <ImageView
                        android:tag="common_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/img_magnetic" />
                </FrameLayout>


            </FrameLayout>

            <FrameLayout
                android:visibility='@{viewModel.state.ordinal() &gt;= UIStates.Finished.ordinal() ? View.VISIBLE : View.GONE}'
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    layout="@layout/payment_finish"
                    bind:result='@{viewModel.result}'
                    bind:message='@{viewModel.finishedMessage}'
                    bind:sharedViewModel='@{sharedViewModel}' />

            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:visibility='@{viewModel.state == UIStates.Connecting ? View.VISIBLE : View.GONE}'
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_gravity="center"
                android:layout_width="180dp"
                android:layout_height="180dp" />

        </FrameLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/common_margin"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="@dimen/common_btn_width"
                    android:layout_height="@dimen/common_btn_height"
                    android:onClick='@{handlers::onCancelClick}'
                    android:visibility='@{viewModel.state == UIStates.Read || viewModel.state == UIStates.Unknown ? View.VISIBLE : View.INVISIBLE}'
                    android:backgroundTint="@color/btn_common_cancel"
                    android:layout_gravity="center"
                    android:text="@string/cancel_button_label_string"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="@dimen/common_btn_width"
                    android:layout_height="66dp"
                    android:layout_gravity="center"
                    android:visibility='@{viewModel.state == UIStates.Unknown ? View.VISIBLE : View.INVISIBLE}'
                    android:onClick='@{handlers::onCheckResultClick}'
                    android:text="結果確認" />
            </FrameLayout>

        </LinearLayout>

    </FrameLayout>
</layout>