<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="jp.mcapps.android.multi_payment_terminal.ui.ticket.TicketIssueViewModel" />
        <variable
            name="handlers"
            type="jp.mcapps.android.multi_payment_terminal.ui.ticket.TicketIssueHandlers" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:orientation="vertical">

        <FrameLayout
            android:visibility='@{viewModel.isProcessing ? View.VISIBLE : View.GONE}'
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_gravity="center"
                android:layout_width="180dp"
                android:layout_height="180dp" />

        </FrameLayout>

        <!-- 成功時 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="340dp"
            android:layout_height="110dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:visibility="@{viewModel.isIssueResult ? View.VISIBLE : View.GONE}"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_ticket_name"
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@color/thin_blue"
                android:gravity="center"
                android:text='@{viewModel.getTicketName}'
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_ticket_trip_info"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@color/thin_blue"
                android:text='@{viewModel.getTicketTripInfo}'
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_ticket_name" />

            <TextView
                android:id="@+id/textView_remaining_seats"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginTop="85dp"
                android:gravity="center"
                android:text='@{viewModel.getRemainingSeats}'
                android:textColor="@color/dark_gray"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <View
                android:id="@+id/line_vertical"
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:background="@color/line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_ticket_category_info"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:layout_width="340dp"
            android:layout_height="240dp"
            android:layout_marginStart="10dp"
            android:visibility="@{viewModel.isIssueResult ? View.VISIBLE : View.GONE}" />

        <!-- エラー時 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="340dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:visibility="@{!viewModel.isIssueResult() ? View.VISIBLE : View.GONE}"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_error"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                bind:srcCompat="@drawable/ic_error" />

            <!-- エラーコード -->
            <TextView
                android:id="@+id/textView_error_code"
                android:layout_width="270dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text='@{viewModel.getErrorCode}'
                android:textColor="@color/red"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/imageView_error"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="340dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:visibility="@{!viewModel.isIssueResult ? View.VISIBLE : View.GONE}"
            android:orientation="vertical">

            <!-- エラーメッセージ -->
            <TextView
                android:id="@+id/textView_error_message"
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="top|center_horizontal"
                android:text='@{viewModel.getErrorMessage}'
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="340dp"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:visibility="@{!viewModel.isIssueResult ? View.VISIBLE : View.GONE}"
            android:orientation="vertical">

            <!-- エラーメッセージ(補足) -->
            <TextView
                android:id="@+id/textView_error_message_information"
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="top|center_horizontal"
                android:text='@{viewModel.getErrorMessageInformation}'
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@color/thin_blue"
            android:orientation="vertical">

            <!-- QR券発行に進む -->
            <Button
                android:id="@+id/button_qr_issue"
                android:layout_width="340dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/green_500"
                android:onClick='@{handlers::ticketIssue}'
                android:text='@string/btn_qr_issue'
                android:textSize="28sp"
                app:layout_constraintTop_toTopOf="parent"
                bind:layout_constraintEnd_toEndOf="parent"
                bind:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button_cancel"
                android:layout_width="340dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@drawable/btn_common_cancel_state_list"
                android:enabled="@{viewModel.isCancel}"
                android:onClick='@{handlers::ticketCancel}'
                android:text='@string/btn_cancel'
                android:textSize="28sp"
                app:layout_constraintTop_toBottomOf="@+id/button_qr_issue"
                bind:layout_constraintEnd_toEndOf="parent"
                bind:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>