<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.driver_code.DriverCodeFragment">

    <data>

        <import type="android.view.View" />
        <variable
            name="posHandlers"
            type="jp.mcapps.android.multi_payment_terminal.ui.pos.PosEventHandlers" />
        <variable
            name="sharedViewModel"
            type="jp.mcapps.android.multi_payment_terminal.SharedViewModel" />
        <variable
            name="posViewModel"
            type="jp.mcapps.android.multi_payment_terminal.ui.pos.PosViewModel" />
        <variable
            name="productSelectViewModel"
            type="jp.mcapps.android.multi_payment_terminal.ui.pos.ProductSelectViewModel" />

        <variable
            name="cartManualInputHandlers"
            type="jp.mcapps.android.multi_payment_terminal.ui.pos.CartManualInputHandlers" />

        <variable
            name="cartManualInputViewModel"
            type="jp.mcapps.android.multi_payment_terminal.ui.pos.CartManualInputViewModel" />

        <import type="jp.mcapps.android.multi_payment_terminal.database.pos.ReducedTaxTypes" />

        <import type="jp.mcapps.android.multi_payment_terminal.database.pos.IncludedTaxTypes" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/app_pos_bar"
            layout="@layout/app_bar_pos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:sharedViewModel='@{sharedViewModel}'
            bind:posViewModel='@{posViewModel}'
            bind:posHandlers='@{posHandlers}'
            bind:productSelectViewModel='@{productSelectViewModel}'
            android:visibility='@{sharedViewModel.actionBarMode == sharedViewModel.ActionBarMode.POS ? View.VISIBLE : View.GONE}'
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_menu_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioGroup
                android:id="@+id/tax_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RadioButton
                    android:id="@+id/st_tax"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:background="@drawable/btn_manual_input"
                    android:button="@null"
                    android:checked='@{cartManualInputViewModel.reducedTaxType == ReducedTaxTypes.GENERAL}'
                    android:gravity="center"
                    android:onClick='@{() -> cartManualInputHandlers.onRedycedBtn(cartManualInputViewModel , ReducedTaxTypes.GENERAL)}'
                    android:text="標準税率"
                    android:textColor="@drawable/btn_manual_input"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/li_tax"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:background="@drawable/btn_manual_input"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:onClick='@{() -> cartManualInputHandlers.onRedycedBtn(cartManualInputViewModel , ReducedTaxTypes.REDUCED)}'
                    android:text="軽減税率"
                    android:textColor="@drawable/btn_manual_input"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/no_tax"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:background="@drawable/btn_manual_input"
                    android:button="@null"
                    android:checked='@{cartManualInputViewModel.reducedTaxType == ReducedTaxTypes.EXEMPTION}'
                    android:gravity="center"
                    android:onClick='@{() -> cartManualInputHandlers.onRedycedBtn(cartManualInputViewModel , ReducedTaxTypes.EXEMPTION)}'
                    android:text="非課税"
                    android:textColor="@drawable/btn_manual_input"
                    android:textSize="18sp" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/tax_inclusive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:orientation="horizontal"
                android:visibility='@{cartManualInputViewModel.reducedTaxType == ReducedTaxTypes.EXEMPTION ? View.INVISIBLE : View.VISIBLE}'
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tax_rate">

                <RadioButton
                    android:id="@+id/out_tax"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:background="@drawable/btn_manual_input"
                    android:button="@null"
                    android:checked='@{cartManualInputViewModel.includedTaxType == IncludedTaxTypes.EXCLUDED}'
                    android:gravity="center"
                    android:onClick='@{() -> cartManualInputHandlers.onIncludedBtn(cartManualInputViewModel , IncludedTaxTypes.EXCLUDED)}'
                    android:text="外税"
                    android:textColor="@drawable/btn_manual_input"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/inner_tax"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:background="@drawable/btn_manual_input"
                    android:button="@null"
                    android:checked='@{cartManualInputViewModel.includedTaxType == IncludedTaxTypes.INCLUDED}'
                    android:gravity="center"
                    android:onClick='@{() -> cartManualInputHandlers.onIncludedBtn(cartManualInputViewModel , IncludedTaxTypes.INCLUDED)}'
                    android:text="内税"
                    android:textColor="@drawable/btn_manual_input"
                    android:textSize="18sp" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tax_inclusive">

                <EditText
                    android:background="@drawable/stroke_gray"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/common_margin_small"
                    android:paddingHorizontal="@dimen/common_margin"
                    android:gravity="end"
                    android:hint="単価"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    android:longClickable="false"
                    android:cursorVisible="false"
                    android:text="@{cartManualInputViewModel.unitPriceText}"
                    android:textSize="40sp">

                </EditText>

                <ImageView
                    android:id="@+id/back_delete"
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/common_margin_small"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:onClick='@{view -> cartManualInputHandlers.onBackDelete(view, cartManualInputViewModel)}'
                    android:src="@drawable/manual_input_clear"
                    android:text="@string/btn_common_cancel_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/number_layout_789"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/price_layout">

                <Button
                    android:id="@+id/btn_driver_code_numbers_7"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:onClick='@{() -> cartManualInputHandlers.onInputNumber(cartManualInputViewModel , "7")}'
                    android:text="@string/btn_common_num_7" />

                <Button
                    android:id="@+id/btn_driver_code_numbers_8"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:onClick='@{() -> cartManualInputHandlers.onInputNumber(cartManualInputViewModel , "8")}'
                    android:text="@string/btn_common_num_8" />

                <Button
                    android:id="@+id/btn_driver_code_numbers_9"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:onClick='@{() -> cartManualInputHandlers.onInputNumber(cartManualInputViewModel , "9")}'
                    android:text="@string/btn_common_num_9" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/number_layout_456"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/number_layout_789">

                <Button
                    android:id="@+id/btn_driver_code_numbers_4"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:onClick='@{() -> cartManualInputHandlers.onInputNumber(cartManualInputViewModel , "4")}'
                    android:text="@string/btn_common_num_4" />

                <Button
                    android:id="@+id/btn_driver_code_numbers_5"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:onClick='@{() -> cartManualInputHandlers.onInputNumber(cartManualInputViewModel , "5")}'
                    android:text="@string/btn_common_num_5" />

                <Button
                    android:id="@+id/btn_driver_code_numbers_6"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:onClick='@{() -> cartManualInputHandlers.onInputNumber(cartManualInputViewModel , "6")}'
                    android:text="@string/btn_common_num_6" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/number_layout_123"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/number_layout_456">

                <Button
                    android:id="@+id/btn_driver_code_numbers_1"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:onClick='@{() -> cartManualInputHandlers.onInputNumber(cartManualInputViewModel , "1")}'
                    android:text="@string/btn_common_num_1" />

                <Button
                    android:id="@+id/btn_driver_code_numbers_2"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:onClick='@{() -> cartManualInputHandlers.onInputNumber(cartManualInputViewModel , "2")}'
                    android:text="@string/btn_common_num_2" />

                <Button
                    android:id="@+id/btn_driver_code_numbers_3"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_weight="1"
                    android:onClick='@{() -> cartManualInputHandlers.onInputNumber(cartManualInputViewModel , "3")}'
                    android:text="@string/btn_common_num_3" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/number_layout_0clear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/number_layout_123">

                <Button
                    android:id="@+id/btn_driver_code_numbers_0"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick='@{() -> cartManualInputHandlers.onInputNumber(cartManualInputViewModel , "0")}'
                    android:text="@string/btn_common_num_0" />

                <Button
                    android:id="@+id/btn_driver_code_clear"
                    style="@style/StyleBasicButtonOther"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:backgroundTint="@color/btn_common_clear"
                    android:onClick='@{view -> cartManualInputHandlers.onClearBtn(view , cartManualInputViewModel)}'
                    android:tag="@string/btn_common_clear_horizontal"
                    android:text="@string/btn_common_clear_horizontal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/basic_other_btn_text_size_large" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/number_layout_0clear">

                <Button
                    android:id="@+id/btn_driver_code_enter"
                    style="@style/StyleBasicButtonOther"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:backgroundTint="@color/btn_common_enter"
                    android:onClick='@{view -> cartManualInputHandlers.onEnterBtn(view,cartManualInputViewModel)}'
                    android:tag="@string/btn_common_enter_horizontal"
                    android:text="@string/btn_common_enter_horizontal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/basic_other_btn_text_size_large" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>
