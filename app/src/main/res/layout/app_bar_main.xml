<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="sharedViewModel"
            type="jp.mcapps.android.multi_payment_terminal.SharedViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/Theme.MultiPaymentTerminal.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_main"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:popupTheme="@style/Theme.MultiPaymentTerminal.PopupOverlay">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/toolbar_main_back"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginLeft="@dimen/common_margin_large"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:visibility="gone"
                        android:src="@drawable/ic_btn_back" />

                    <ImageView
                        android:id="@+id/toolbar_cancel"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginLeft="@dimen/common_margin_large"
                        android:visibility='@{sharedViewModel.showBarTicketIssueCancel ? View.VISIBLE : View.GONE,default="visible"}'
                        android:src="@drawable/ic_btn_cancel" />

                    <TextView
                        android:id="@+id/app_bar_title_ticket_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/ticket_class_title"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:visibility='@{sharedViewModel.showBarTitleTicketClass ? View.VISIBLE : View.GONE,default="visible"}' />
                    <TextView
                        android:id="@+id/app_bar_title_ticket_embark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/ticket_embark_title"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:visibility='@{sharedViewModel.showBarTitleTicketEmbark ? View.VISIBLE : View.GONE,default="visible"}' />
                    <TextView
                        android:id="@+id/app_bar_title_ticket_disembark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/ticket_disembark_title"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:visibility='@{sharedViewModel.showBarTitleTicketDisembark ? View.VISIBLE : View.GONE,default="visible"}' />

                    <TextView
                        android:id="@+id/app_bar_title_ticket_issue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/ticket_issue_title"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:visibility='@{sharedViewModel.showBarTitleTicketIssue ? View.VISIBLE : View.GONE,default="visible"}' />

                    <TextView
                        android:id="@+id/toolbar_main_demo_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/bar_title_demo_mode"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:visibility="gone"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/toolbar_main_manual_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/bar_title_manual_mode"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:visibility="gone"
                        tools:ignore="RtlHardcoded" />

                    <LinearLayout
                        android:id="@+id/app_bar_arrow_white"
                        android:visibility='@{sharedViewModel.showIndicatorArrowWhite ? View.VISIBLE : View.GONE}'
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/common_margin_large"
                            app:srcCompat="@drawable/ic_triangle_white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/common_margin_large"
                            app:srcCompat="@drawable/ic_triangle_white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/common_margin_large"
                            app:srcCompat="@drawable/ic_triangle_white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/app_bar_arrow_blue"
                        android:visibility='@{sharedViewModel.showIndicatorArrowBlue ? View.VISIBLE : View.GONE}'
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/common_margin_large"
                            app:srcCompat="@drawable/ic_triangle_blue" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/common_margin_large"
                            app:srcCompat="@drawable/ic_triangle_blue" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/common_margin_large"
                            app:srcCompat="@drawable/ic_triangle_blue" />
                    </LinearLayout>

                    <!--                    非接触が有効な場合のみ表示するように-->
                    <!-- アンテナエリアは中央より若干右にあるため、あえてずらしています -->
                    <ImageView
                        android:id="@+id/toolbar_mark_nfc"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:translationX="70dp"
                        android:visibility='@{sharedViewModel.showMarkNfc ? View.VISIBLE : View.GONE, default="gone"}'
                        app:srcCompat="@drawable/ic_mark_nfc" />

                    <ImageView
                        android:id="@+id/toolbar_mark_felica"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:translationX="70dp"
                        android:visibility='@{sharedViewModel.showMarkFelica ? View.VISIBLE : View.GONE, default="gone"}'
                        app:srcCompat="@drawable/ic_mark_felica" />
                </FrameLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>