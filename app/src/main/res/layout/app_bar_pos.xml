<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="posHandlers"
            type="jp.mcapps.android.multi_payment_terminal.ui.pos.PosEventHandlers" />
        <variable
            name="sharedViewModel"
            type="jp.mcapps.android.multi_payment_terminal.SharedViewModel" />
        <variable
            name="posViewModel"
            type="jp.mcapps.android.multi_payment_terminal.ui.pos.PosViewModel" />
        <variable
            name="productSelectViewModel"
            type="jp.mcapps.android.multi_payment_terminal.ui.pos.ProductSelectViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/Theme.MultiPaymentTerminal.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_pos"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:popupTheme="@style/Theme.MultiPaymentTerminal.PopupOverlay">

                    <RelativeLayout
                        android:id="@+id/app_bar_arrow_white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ImageView
                            android:id="@+id/fragment_back"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginLeft="@dimen/common_margin_large"
                            android:onClick="@{view -> posHandlers.navigateMain(view,sharedViewModel)}"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:visibility='@{posViewModel.backVisible ? View.VISIBLE : View.GONE, default="gone"}'
                            android:src="@drawable/ic_btn_back"/>

                        <ImageView
                            android:id="@+id/product_select_back"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginLeft="@dimen/common_margin_large"
                            android:onClick="@{() -> productSelectViewModel.back()}"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:visibility='@{productSelectViewModel.productSelectBackVisible ? View.VISIBLE : View.GONE,default="visible"}'
                            android:src="@drawable/ic_btn_back"/>

                        <ImageView
                            android:id="@+id/nav_cart_confirm"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginLeft="@dimen/common_margin_large"
                            android:onClick="@{view -> posHandlers.navigateFromManualToCartConfirm(view)}"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:visibility='@{posViewModel.getCartConfirmVisible ? View.VISIBLE : View.GONE,default="visible"}'
                            android:src="@drawable/ic_btn_back"/>

                        <ImageView
                            android:id="@+id/nav_up"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginLeft="@dimen/common_margin_large"
                            android:onClick="@{view -> posHandlers.navigateUp(view)}"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:visibility='@{posViewModel.navigateUpVisible ? View.VISIBLE : View.GONE,default="visible"}'
                            android:src="@drawable/ic_btn_back"/>

                        <ImageView
                            android:id="@+id/toolbar_main_back"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:backgroundTint="@color/white"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="@{view -> posHandlers.navigateMain(view,sharedViewModel)}"
                            android:padding="2dp"
                            android:src="@drawable/ic_pos_home"
                            android:textColor="?attr/colorPrimary"
                            />

<!--                        <Button-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="match_parent"-->
<!--                            android:layout_marginLeft="10dp"-->
<!--                            android:clickable="true"-->
<!--                            android:focusable="true"-->
<!--                            android:backgroundTint="@color/white"-->
<!--                            android:textColor="?attr/colorPrimary"-->
<!--                            android:visibility="@{viewModel.searchVisible ? View.VISIBLE : View.GONE}"-->
<!--                            android:text="検索">-->
<!--                        </Button>-->

                    </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
