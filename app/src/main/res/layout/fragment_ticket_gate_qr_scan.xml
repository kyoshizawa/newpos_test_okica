<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="jp.mcapps.android.multi_payment_terminal.ui.ticket.TicketGateQrScanViewModel" />
        <variable
            name="handlers"
            type="jp.mcapps.android.multi_payment_terminal.ui.ticket.TicketGateQrScanHandlers" />
        <variable
            name="handlers_pin_input"
            type="jp.mcapps.android.multi_payment_terminal.ui.pin.PinInputEventHandlers" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/black"
        android:orientation="vertical">

        <include
            layout="@layout/fragment_pin_input"
            android:visibility='@{viewModel.isPinInput ? View.VISIBLE : View.GONE}'
            bind:viewModel='@{viewModel}'
            bind:handlers='@{handlers_pin_input}'
            bind:display='@{viewModel.display}' />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="vertical">
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>