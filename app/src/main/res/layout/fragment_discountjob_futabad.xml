<?xml version="1.0" encoding="utf-8"?>
<!-- ADD-S BMT S.Oyama 2024/08/30 フタバ双方向向け改修 -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <import type="android.view.View" />

        <import type="jp.mcapps.android.multi_payment_terminal.AppPreference" />

        <variable
            name="handlers"
            type="jp.mcapps.android.multi_payment_terminal.ui.discount.DiscountJobFutabaDEventHandlers" />

        <variable
            name="viewModel"
            type="jp.mcapps.android.multi_payment_terminal.ui.discount.DiscountJobFutabaDViewModel" />

        <variable
            name="sharedViewModel"
            type="jp.mcapps.android.multi_payment_terminal.SharedViewModel" />
    </data>

<!--
-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 割引情報取得等成功画面 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility='@{View.VISIBLE}'>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/header_lbl4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_margin_large"
                    android:background="@drawable/stroke_gray"
                    android:gravity="center"
                    android:padding="@dimen/common_margin_large"
                    android:text='割引確認'
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/discountjob_message_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="154dp"
                    android:layout_margin="@dimen/common_margin_large"
                    android:background="@drawable/stroke_gray"
                    android:gravity="center"
                    android:padding="@dimen/common_margin_large"
                    android:text='ゆうゆう\n割引しても\nよろしいですか？'
                    android:textSize="24sp" />
            </LinearLayout>

            <Button
                android:id="@+id/ok_btn1"
                android:onClick='@{view -> handlers.onOkClick(view,viewModel, sharedViewModel)}'
                android:layout_width="150dp"
                android:layout_height="@dimen/common_btn_height"
                android:layout_gravity="bottom|left"
                android:layout_margin="@dimen/common_margin_large"
                android:backgroundTint="@color/btn_common_enter"
                android:text="はい" />

            <Button
                android:id="@+id/cancel_btn4"
                android:onClick='@{view -> handlers.onCancelClick(view,viewModel, sharedViewModel)}'
                android:layout_width="150dp"
                android:layout_height="@dimen/common_btn_height"
                android:layout_gravity="bottom|right"
                android:layout_margin="@dimen/common_margin_large"
                android:backgroundTint="@color/btn_common_cancel"
                android:text="戻る" />

        </FrameLayout>

    </FrameLayout>

</layout>
<!-- ADD-E BMT S.Oyama 2024/08/30 フタバ双方向向け改修 -->
