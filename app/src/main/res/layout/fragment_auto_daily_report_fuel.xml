<?xml version="1.0" encoding="utf-8"?>
<layout
    android:id="@+id/fragment_auto_daily_report_fuel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
            name="sharedViewModel"
            type="jp.mcapps.android.multi_payment_terminal.SharedViewModel" />
        <variable
            name="viewModel"
            type="jp.mcapps.android.multi_payment_terminal.ui.auto_daily_report.AutoDailyReportFuelViewModel" />
        <variable
            name="handlers"
            type="jp.mcapps.android.multi_payment_terminal.ui.auto_daily_report.AutoDailyReportFuelEventHandlers" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_primary">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cash_data_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/common_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <LinearLayout
                android:id="@+id/billing_amount_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="@dimen/common_margin_large"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_margin_small"
                        android:layout_marginStart="@dimen/common_margin_small"
                        android:background="@color/bg_primary"
                        android:text="燃料入力"
                        android:height="48dp"
                        android:textSize="20sp"
                        android:layout_gravity="center_horizontal"
                        />
                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/deposit_amount_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/billing_amount_layout">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:background="@drawable/stroke_gray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/common_margin_small"
                        android:paddingHorizontal="@dimen/common_margin"
                        android:gravity="end"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:clickable="false"
                        android:longClickable="false"
                        android:cursorVisible="false"
                        android:text='@{viewModel.InputValueTxt }'
                        android:textSize="40sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:layout_marginStart="@dimen/common_margin_small"
                        android:background="@color/bg_primary"
                        android:text="燃料量(L)" />

                </FrameLayout>

                <ImageView
                    android:id="@+id/back_delete"
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/common_margin_small"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:onClick='@{view -> handlers.onBackDelete(view)}'
                    android:src="@drawable/manual_input_clear"
                    android:text="@string/btn_common_cancel_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/over_amount_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/deposit_amount_layout">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/text_regist_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_margin_small"
                        android:layout_marginStart="@dimen/common_margin_small"
                        android:background="@color/bg_primary"
                        android:text="燃料登録中"
                        android:height="48dp"
                        android:textSize="20sp"
                        android:layout_gravity="center_horizontal"
                        android:visibility='@{viewModel.IsRegistJob ? View.VISIBLE : View.GONE}'

                        />

                </FrameLayout>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cash_input"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cash_data_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"
            >

            <LinearLayout
                android:id="@+id/number_layout_789"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="@dimen/common_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/btn_autodailyreport_fuel_numbers_7"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick='@{view -> handlers.onInputNumber(view , "7")}'
                    android:text="@string/btn_common_num_7" />

                <Button
                    android:id="@+id/btn_autodailyreport_fuel_numbers_8"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick='@{view -> handlers.onInputNumber(view , "8")}'
                    android:text="@string/btn_common_num_8" />

                <Button
                    android:id="@+id/btn_autodailyreport_fuel_numbers_9"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick='@{view -> handlers.onInputNumber(view , "9")}'
                    android:text="@string/btn_common_num_9" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/number_layout_456"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/number_layout_789">

                <Button
                    android:id="@+id/btn_autodailyreport_fuel_numbers_4"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick='@{view -> handlers.onInputNumber(view , "4")}'
                    android:text="@string/btn_common_num_4" />

                <Button
                    android:id="@+id/btn_autodailyreport_fuel_numbers_5"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick='@{view -> handlers.onInputNumber(view , "5")}'
                    android:text="@string/btn_common_num_5" />

                <Button
                    android:id="@+id/btn_autodailyreport_fuel_numbers_6"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick='@{view -> handlers.onInputNumber(view , "6")}'
                    android:text="@string/btn_common_num_6" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/number_layout_123"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/number_layout_456">

                <Button
                    android:id="@+id/btn_autodailyreport_fuel_numbers_1"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick='@{view -> handlers.onInputNumber(view , "1")}'
                    android:text="@string/btn_common_num_1" />

                <Button
                    android:id="@+id/btn_autodailyreport_fuel_numbers_2"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick='@{view -> handlers.onInputNumber(view , "2")}'
                    android:text="@string/btn_common_num_2" />

                <Button
                    android:id="@+id/btn_autodailyreport_fuel_numbers_3"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick='@{view -> handlers.onInputNumber(view , "3")}'
                    android:text="@string/btn_common_num_3" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/number_layout_0clear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/number_layout_123">

                <Button
                    android:id="@+id/btn_autodailyreport_fuel_numbers_0"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick='@{view -> handlers.onInputNumber(view , "0")}'
                    android:text="@string/btn_common_num_0" />

                <Button
                    android:id="@+id/btn_autodailyreport_fuel_numbers_dot"
                    style="@style/StyleBasicButtonNumber"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick='@{view -> handlers.onInputNumber(view , ".")}'
                    android:text="@string/btn_common_num_dot" />

                <Button
                    android:id="@+id/btn_autodailyreport_fuel_clear"
                    style="@style/StyleBasicButtonOther"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/btn_common_clear"
                    android:onClick='@{view -> handlers.onClear(view )}'
                    android:tag="@string/btn_common_clear_horizontal"
                    android:text="ｸﾘｱ"

                    android:textColor="@color/black"
                    android:textSize="@dimen/basic_other_btn_text_size_large"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="@dimen/common_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/btn_autodailyreport_fuel_enter"
                    style="@style/StyleBasicButtonOther"
                    android:layout_marginHorizontal="@dimen/common_margin_small"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:backgroundTint="@color/btn_common_enter"
                    android:onClick='@{view -> handlers.onRegist(view )}'
                    android:tag="登録"
                    android:text="登録"
                    android:textColor="@color/black"
                    android:textSize="@dimen/basic_other_btn_text_size_large" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
