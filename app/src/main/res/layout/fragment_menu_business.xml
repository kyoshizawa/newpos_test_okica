        <Button
            android:id="@+id/btn_menu_business_driver_code_input"
            android:text="@string/btn_business_driver_code_input"
            android:visibility="@{viewModel.driverInfoVisibility ? android.view.View.VISIBLE : android.view.View.GONE}"
            android:onClick="@{view -> handlers.navigateMain(view, @id/action_navigation_menu_to_navigation_driver_code)}"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_menu_business_car_id_input"
            style="@style/StyleBusinessButton"/>

        <Button
            android:id="@+id/btn_menu_business_car_id_input"
            android:text="@string/btn_business_car_id_input"
            android:visibility="@{viewModel.carIdVisibility ? android.view.View.VISIBLE : android.view.View.GONE}"
            android:onClick="@{handlers::navigateToInputCarId}"
            app:layout_constraintTop_toBottomOf="@id/btn_menu_business_driver_code_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_menu_business_send_log"
            style="@style/StyleBusinessButton"/>

        <Button
            android:id="@+id/btn_menu_business_send_log"
            android:text="@string/btn_business_send_log"
            android:onClick="@{view -> handlers.sendLog(view, sharedViewModel)}"
            app:layout_constraintTop_toBottomOf="@id/btn_menu_business_car_id_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_menu_business_aggregate"
            style="@style/StyleBusinessButton"/>

        <Button
            android:id="@+id/btn_menu_business_aggregate"
            android:text="@string/btn_business_aggregate"
            android:onClick='@{view -> handlers.navigateMain(view, @id/action_navigation_menu_to_navigation_aggregate)}'
            app:layout_constraintTop_toBottomOf="@id/btn_menu_business_send_log"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_menu_business_refresh_pos_data"
            style="@style/StyleBusinessButton"/>

        <Button
            android:id="@+id/btn_menu_business_refresh_pos_data"
            android:text="@string/btn_business_refresh_pos_data"
            android:onClick='@{view -> handlers.refreshPosProducts(view, sharedViewModel)}'
            android:visibility="@{viewModel.isPosActivated ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@id/btn_menu_business_aggregate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_menu_business_ticket_data"
            style="@style/StyleBusinessButton"/>

        <Button
            android:id="@+id/btn_menu_business_ticket_data"
            android:onClick='@{view -> handlers.refreshTicketSales(view, sharedViewModel)}'
            android:text="@string/btn_business_ticket_data"
            android:visibility="@{viewModel.isTicketActivated ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@id/btn_menu_business_refresh_pos_data"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_menu_business_balance"
            style="@style/StyleBusinessButton"/>

        <Button
            android:id="@+id/btn_menu_business_balance"
            style="@style/StyleBusinessButton"
            android:onClick='@{view -> handlers.navigateMenu(view, @id/action_navigation_menu_business_to_navigation_menu_balance)}'
            android:text="@string/btn_business_balance"
            android:visibility="@{viewModel.isTicketActivated ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@+id/btn_menu_business_ticket_data"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_menu_business_external_device"
            />

        <Button
            android:id="@+id/btn_menu_business_external_device"
            android:text="@string/btn_business_external_device"
            android:visibility="@{viewModel.isCashChangerActivated ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@id/btn_menu_business_balance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_menu_business_manual"
            style="@style/StyleBusinessButton"/>

        <Button
            android:id="@+id/btn_menu_business_manual"
            android:text="@string/btn_business_manual"
            android:onClick='@{view -> handlers.navigateToManualMenu(view, sharedViewModel)}'
            android:visibility="@{ viewModel.getisFutabaDMode() ? View.VISIBLE : View.GONE }"
            app:layout_constraintTop_toBottomOf="@id/btn_menu_business_external_device"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_menu_business_duplex"
            style="@style/StyleBusinessButton"/>

        <Button
