            android:text="@string/btn_business_duplex"
            android:onClick='@{view -> handlers.navigateToDuplexMenu(view, sharedViewModel)}'
            android:visibility="@{ viewModel.getisManualMode() ? View.VISIBLE : View.GONE }"
