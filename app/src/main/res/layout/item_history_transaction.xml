<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="jp.mcapps.android.multi_payment_terminal.ui.Converters" />
        <variable
            name="transHead"
            type="jp.mcapps.android.multi_payment_terminal.data.TransHead" />
        <variable
            name="colorResource"
            type="int" />
        <variable
            name="resultVisible"
            type="int" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <View
            android:id="@+id/grid_history_transaction"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/common_margin"
            android:background="@color/black"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_trans_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin"
            android:text="@{Converters.integerToString(transHead.termSequence) + @string/colon_mark + transHead.transBrand}"
            android:textSize="@dimen/driver_code_history_text_size"
            android:textColor="@{colorResource}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/grid_history_transaction"/>

        <TextView
            android:id="@+id/value_history_trans_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_large"
            android:layout_marginTop="@dimen/common_margin_small"
            android:text="@{transHead.transDate.substring(5,transHead.transDate.length() - 3)}"
            android:textSize="@dimen/driver_code_history_text_size"
            android:textColor="@{colorResource}"
            app:layout_constraintStart_toStartOf="@id/text_trans_title"
            app:layout_constraintTop_toBottomOf="@id/text_trans_title"/>

        <TextView
            android:id="@+id/value_trans_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_small"
            android:text="@{Converters.transTypeToString(transHead.transType)}"
            android:textSize="@dimen/driver_code_history_text_size"
            android:textColor="@{colorResource}"
            app:layout_constraintStart_toStartOf="@id/value_history_trans_date"
            app:layout_constraintTop_toBottomOf="@id/value_history_trans_date"/>

        <TextView
            android:id="@+id/value_trans_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{Converters.transResultToString(transHead.transResult)}"
            android:textSize="@dimen/driver_code_history_text_size"
            android:textColor="@{colorResource}"
            android:visibility="@{resultVisible}"
            app:layout_constraintStart_toEndOf="@id/value_trans_type"
            app:layout_constraintTop_toTopOf="@id/value_trans_type"/>

        <TextView
            android:id="@+id/value_trans_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin"
            android:text="@{Converters.integerToNumberFormat(transHead.transAmount) + @string/yen}"
            android:textSize="@dimen/driver_code_history_text_size"
            android:textColor="@{colorResource}"
            app:layout_constraintStart_toEndOf="@id/value_trans_result"
            app:layout_constraintTop_toTopOf="@id/value_trans_result"/>

        <Button
            android:id="@+id/btn_trans_history_detail"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_btn_height"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/common_margin"
            android:text="詳細"
            android:textSize="@dimen/driver_code_history_text_size"
            app:layout_constraintTop_toTopOf="@id/text_trans_title"
            app:layout_constraintBottom_toBottomOf="@id/value_trans_amount"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>