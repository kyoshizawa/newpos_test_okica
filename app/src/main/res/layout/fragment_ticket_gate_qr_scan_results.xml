<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <import type="jp.mcapps.android.multi_payment_terminal.ui.Converters" />
        <variable
            name="viewModel"
            type="jp.mcapps.android.multi_payment_terminal.ui.ticket.TicketGateQrScanResultsViewModel" />
        <variable
            name="handlers"
            type="jp.mcapps.android.multi_payment_terminal.ui.ticket.TicketGateQrScanResultsHandlers" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility='@{viewModel.getResult ? View.VISIBLE : View.GONE}'
            android:orientation="vertical">

            <!-- 成功時 -->
            <ImageView
                android:id="@+id/imageView_check_ok"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                bind:srcCompat="@drawable/ic_check_ok" />

            <TextView
                android:id="@+id/textView_message"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/text_ticket_ok_message"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView_check_ok" />

            <TextView
                android:id="@+id/textView_message_english"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/text_ticket_ok_message_english"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_message" />

            <TextView
                android:id="@+id/textView_stroke"
                android:layout_width="250dp"
                android:layout_height="190dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="375dp"
                android:background="@drawable/stroke_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_total"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="195dp"
                android:layout_marginTop="380dp"
                android:gravity="center"
                android:text="@string/text_ticket_count_total"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_total_peoples"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="380dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:text='@{Converters.integerToNumberFormat(viewModel.getTotalPeoples)}'
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/textView_people"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_people"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="265dp"
                android:layout_marginTop="380dp"
                android:gravity="center"
                android:text="@string/text_ticket_people"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/line_horizontal"
                android:layout_width="220dp"
                android:layout_height="3dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="2dp"
                android:background="@color/dark_gray"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_total" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="410dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:visibility='@{viewModel.getAdultNumber > 0 ? View.VISIBLE : View.GONE}'
                    android:orientation="vertical">

                    <!-- 大人 -->
                    <TextView
                        android:id="@+id/textView_adult"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:text="@string/text_ticket_adult"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_adult_multiplication"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/text_ticket_multiplication"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/textView_adult"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_adult_number"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text='@{Converters.integerToNumberFormat(viewModel.getAdultNumber)}'
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/textView_adult_multiplication"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:visibility='@{viewModel.getChildNumber > 0 ? View.VISIBLE : View.GONE}'
                    android:orientation="vertical">

                    <!-- 小人 -->
                    <TextView
                        android:id="@+id/textView_child"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:text="@string/text_ticket_child"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_child_multiplication"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/text_ticket_multiplication"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/textView_child"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_child_number"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text='@{Converters.integerToNumberFormat(viewModel.getChildNumber)}'
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/textView_child_multiplication"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:visibility='@{viewModel.getAdultDisabilityNumber > 0 ? View.VISIBLE : View.GONE}'
                    android:orientation="vertical">

                    <!-- 障がい者 大人 -->
                    <TextView
                        android:id="@+id/textView_adult_disability"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:text="@string/text_ticket_adult_disability"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_adult_disability_multiplication"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/text_ticket_multiplication"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/textView_adult_disability"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_adult_disability_number"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text='@{Converters.integerToNumberFormat(viewModel.getAdultDisabilityNumber)}'
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/textView_adult_disability_multiplication"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:visibility='@{viewModel.getChildDisabilityNumber > 0 ? View.VISIBLE : View.GONE}'
                    android:orientation="vertical">

                    <!-- 障がい者 小人 -->
                    <TextView
                        android:id="@+id/textView_child_disability"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:text="@string/text_ticket_child_disability"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_child_disability_multiplication"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/text_ticket_multiplication"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/textView_child_disability"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_child_disability_number"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text='@{Converters.integerToNumberFormat(viewModel.getChildDisabilityNumber)}'
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/textView_child_disability_multiplication"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:visibility='@{viewModel.getCaregiverNumber > 0 ? View.VISIBLE : View.GONE}'
                    android:orientation="vertical">

                    <!-- 介助者 -->
                    <TextView
                        android:id="@+id/textView_caregiver"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:text="@string/text_ticket_caregiver"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_caregiver_multiplication"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/text_ticket_multiplication"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/textView_caregiver"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_caregiver_number"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text='@{Converters.integerToNumberFormat(viewModel.getCaregiverNumber)}'
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/textView_caregiver_multiplication"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:visibility='@{viewModel.getBabyNumber > 0 ? View.VISIBLE : View.GONE}'
                    android:orientation="vertical">

                    <!-- 乳幼児 -->
                    <TextView
                        android:id="@+id/textView_baby"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:text="@string/text_ticket_baby"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_baby_multiplication"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/text_ticket_multiplication"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/textView_baby"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_baby_number"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text='@{Converters.integerToNumberFormat(viewModel.getBabyNumber)}'
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/textView_baby_multiplication"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility='@{!viewModel.getResult ? View.VISIBLE : View.GONE}'
            android:orientation="vertical">

            <!-- 失敗時 -->
            <TextView
                android:id="@+id/textView_error_code"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@color/radio_level_low"
                android:gravity="center"
                android:text='@{viewModel.getErrorCode}'
                android:textSize="25sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView_check_ng"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                bind:srcCompat="@drawable/ic_check_ng" />

            <TextView
                android:id="@+id/textView_ng_message"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/text_ticket_ng_message"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView_check_ng" />

            <TextView
                android:id="@+id/textView_ng_message_english"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/text_ticket_ng_message_english"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_ng_message" />

            <TextView
                android:id="@+id/textView_error_message"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text='@{viewModel.getErrorMessage}'
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_ng_message_english" />

            <TextView
                android:id="@+id/textView_error_message_english"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text='@{viewModel.getErrorMessageEnglish}'
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_error_message" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>