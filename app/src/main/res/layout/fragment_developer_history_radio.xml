<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <variable
            name="viewModel"
            type="jp.mcapps.android.multi_payment_terminal.ui.developer.DeveloperHistoryRadioViewModel" />
        <variable
            name="handlers"
            type="jp.mcapps.android.multi_payment_terminal.ui.developer.DeveloperEventHandlers" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_developer_history_radio">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_radio_history"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_marginEnd="@dimen/common_margin"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:visibility="@{viewModel.hasHistory ? android.view.View.VISIBLE : android.view.View.INVISIBLE}"
            app:layout_constraintBottom_toTopOf="@+id/btn_delete_radio_history"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_select_datetime_developer_radio" />

        <Button
            android:id="@+id/btn_prev_1hour_radio"
            android:tag="@string/btn_prev_1hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:background="@drawable/ic_baseline_arrow_left_24"
            android:onClick="@{view -> handlers.onChangePeriodClick(view, viewModel.pickedDate, viewModel.type, -1)}"
            android:visibility="@{viewModel.hasPrev ? android.view.View.VISIBLE : android.view.View.GONE}"
            app:layout_constraintEnd_toStartOf="@id/btn_select_datetime_developer_radio"
            app:layout_constraintTop_toTopOf="@id/text_prev_1hour_radio"
            app:layout_constraintBottom_toBottomOf="@id/text_prev_1hour_radio"/>

        <TextView
            android:id="@+id/text_prev_1hour_radio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/common_margin"
            android:text="@string/btn_prev_1hour"
            android:textColor="@color/black"
            android:textSize="@dimen/driver_code_history_text_size"
            android:visibility="@{viewModel.hasPrev ? android.view.View.VISIBLE : android.view.View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/btn_select_datetime_developer_radio"
            app:layout_constraintEnd_toStartOf="@id/btn_select_datetime_developer_radio"
            app:layout_constraintTop_toTopOf="@+id/btn_select_datetime_developer_radio" />

        <Button
            android:id="@+id/btn_select_datetime_developer_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日時変更"
            android:onClick="@{view -> handlers.onDatePickerClick(view, viewModel.pickedDate, viewModel.minMonth)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_developer_history_radio_picked_date"/>

        <TextView
            android:id="@+id/text_next_1hour_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin"
            android:gravity="center_vertical"
            android:text="@string/btn_next_1hour"
            android:textColor="@color/black"
            android:textSize="@dimen/driver_code_history_text_size"
            android:visibility="@{viewModel.hasNext ? android.view.View.VISIBLE : android.view.View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/btn_select_datetime_developer_radio"
            app:layout_constraintStart_toEndOf="@+id/btn_select_datetime_developer_radio"
            app:layout_constraintTop_toTopOf="@+id/btn_select_datetime_developer_radio"/>

        <Button
            android:id="@+id/btn_next_1hour_radio"
            android:tag="@string/btn_next_1hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:background="@drawable/ic_baseline_arrow_right_24"
            android:onClick="@{view -> handlers.onChangePeriodClick(view, viewModel.pickedDate, viewModel.type, 1)}"
            android:visibility="@{viewModel.hasNext ? android.view.View.VISIBLE : android.view.View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/text_next_1hour_radio"
            app:layout_constraintStart_toEndOf="@id/btn_select_datetime_developer_radio"
            app:layout_constraintTop_toTopOf="@+id/text_next_1hour_radio"/>

        <TextView
            android:id="@+id/text_developer_history_radio_picked_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/common_margin_small"
            android:background="@drawable/stroke_gray"
            android:gravity="center"
            android:text="@{viewModel.showDateTime}"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_developer_history_radio_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.errorText}"
            android:textColor="@color/black"
            android:textSize="@dimen/driver_code_history_text_size"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/common_margin_large"
            android:visibility="@{viewModel.hasHistory ? android.view.View.GONE : android.view.View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_select_datetime_developer_radio" />

        <Button
            android:id="@+id/btn_delete_radio_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin"
            android:onClick="@{view -> handlers.onDeleteHistoryClick(view, @string/btn_history_radio)}"
            android:text="履歴クリア"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>