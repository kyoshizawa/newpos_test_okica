                    android:textSize="20dp"
                    android:text="円"
                    android:gravity="left"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_menu_cashchanger_amount_sales"
                android:layout_width="330dp"
                android:layout_height="70dp"
                android:textSize="28sp"
                android:enabled='@{viewModel.chStatusInt == 1 ? true : false}'
                android:onClick="@{view -> handlers.onCashPrint(view)}"
                android:text="@string/btn_cashchanger_cashcount" />
        </LinearLayout>
    </LinearLayout>
</layout>
