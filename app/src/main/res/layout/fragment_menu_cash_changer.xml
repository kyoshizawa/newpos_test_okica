<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="jp.mcapps.android.multi_payment_terminal.ui.Converters" />
        <variable
            name="sharedViewModel"
            type="jp.mcapps.android.multi_payment_terminal.SharedViewModel" />
        <variable
            name="viewModel"
            type="jp.mcapps.android.multi_payment_terminal.ui.menu.MenuCashChangerViewModel" />
        <variable
            name="handlers"
            type="jp.mcapps.android.multi_payment_terminal.ui.menu.MenuCashChangerEventHandlers" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_primary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/common_margin"
                android:text="@string/title_cashchanger"
                android:textColor="@color/black"
                android:textSize="@dimen/history_title_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/title_cashchanger_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_margin"
                android:layout_marginEnd="@dimen/common_margin"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:text="："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/ch_status"
                android:text="@{viewModel.chStatusStr}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_margin"
                android:layout_marginEnd="@dimen/common_margin"
                android:textSize="20dp"
                android:textColor="@{viewModel.chStatusInt == 0 ? @color/text_black : (viewModel.chStatusInt == 1 ? @color/black : @color/bar_emoney_red)}"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_menu_cashchanger_reconnect"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginStart="@dimen/common_margin"
                android:textSize="20sp"
                android:enabled='@{viewModel.enableReConnect}'
                android:onClick="@{view -> handlers.onReConnect(view)}"
                android:text="@string/btn_cashchanger_reconnect"/>

            <Button
                android:id="@+id/btn_menu_cashchanger_cashreturn"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginStart="@dimen/common_margin"
                android:textSize="20sp"
                android:enabled='@{viewModel.chStatusInt != 0 ? true : false}'
                android:onClick="@{view -> handlers.onCashReturn(view)}"
                android:text="@string/btn_cashchanger_enddeposit"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/title_cashchanger_cashcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_margin"
                android:layout_marginEnd="@dimen/common_margin"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:text="："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:text="@{viewModel.valueTotal}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_margin"
                android:layout_marginEnd="@dimen/common_margin"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:text="円"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"/>
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:stretchColumns="0,3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/StyleCashchangerAmountUnitText"
                    android:textSize="20dp"
                    android:text="万"
                    android:gravity="right"/>

                <TextView
                    style="@style/StyleCashchangerAmountValueText"
                    android:textSize="20dp"
                    android:text="@{viewModel.value10000}"
                    android:gravity="right"/>

                <TextView
                    style="@style/StyleCashchangerAmountValueText"
                    android:textSize="20dp"
                    android:text="枚"
                    android:gravity="left"/>

                <TextView
                    style="@style/StyleCashchangerAmountValueText"
                    android:textSize="20dp"
                    android:text="@{viewModel.value10000Total}"
                    android:gravity="right"/>

                <TextView
                    style="@style/StyleCashchangerAmountValueText"
                    android:textSize="20dp"
                    android:text="円"
                    android:gravity="left"/>
            </TableRow>

