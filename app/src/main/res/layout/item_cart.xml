<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <import type="android.text.TextUtils"/>
        <import type="jp.mcapps.android.multi_payment_terminal.ui.Converters" />
        <variable
            name="Product"
            type="jp.mcapps.android.multi_payment_terminal.ui.pos.CartModel" />
        <variable
            name="colorResource"
            type="int" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_product_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/pos_product_notice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="1dp"
            android:text='@{Product.notice2, default="メッセージ"}'
            android:visibility="@{TextUtils.isEmpty(Product.notice2) ? View.GONE : View.VISIBLE}"
            android:background="@drawable/pill_frame"
            android:backgroundTint="@color/orange_500"
            android:elevation="1dp"
            app:layout_constraintEnd_toStartOf="@id/guideline_amount"
            app:layout_constraintBottom_toBottomOf="@id/pos_product_code_text2"
            />

        <TextView
            android:id="@+id/pos_product_code_text2"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="3dp"
            android:layout_marginBottom="3dp"
            android:gravity="left"
            android:text='@{Product.code2, default="コードXXXXXXXXXXXXXXXXXXXXXX"}'
            android:visibility="@{TextUtils.isEmpty(Product.code2) ? View.GONE : View.VISIBLE}"
            android:ellipsize="none"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@id/pos_product_code_text"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/pos_product_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="1dp"
            android:text='@{Product.notice, default="メッセージ"}'
            android:visibility="@{TextUtils.isEmpty(Product.notice) ? View.GONE : View.VISIBLE}"
            android:background="@drawable/pill_frame"
            android:backgroundTint="@color/orange_500"
            android:elevation="1dp"
            app:layout_constraintEnd_toStartOf="@id/guideline_amount"
            app:layout_constraintBottom_toBottomOf="@id/pos_product_code_text"
            />

        <TextView
            android:id="@+id/pos_product_code_text"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="3dp"
            android:gravity="left"
            android:text='@{Product.code, default="コードXXXXXXXXXXXXXXXXXXXXXX"}'
            android:ellipsize="none"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/pos_select_input_type"
            customFont='@{""}'
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:ellipsize="end"
            android:minLines="2"
            android:maxLines="10"
            android:text='@{Product.name, default="ああああああああああああああああああああああああああああああああああああああああ"}'
            android:textSize='19sp'
            app:layout_constraintBottom_toTopOf="@id/pos_product_code_text"
            app:layout_constraintEnd_toStartOf="@id/pos_input_button"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <!--   右下アイコン     -->

        <Button
            android:id="@+id/pos_input_button"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_marginEnd="1dp"
            android:backgroundTint="#093645"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:text='@{String.valueOf(Product.count),default="100"}'
            android:enabled="@{Product.isCountEditable}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/category_or_product_money_and_icon"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <!--     カテゴリの時       -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="center_vertical|end"
                android:orientation="horizontal">

                <TextView
                    customFont='@{""}'
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical|end"
                    android:text='@{"￥" + Product.displayUnitPrice,default="￥200,000"}'
                    android:textSize="27sp"
                    android:textColor="@{colorResource}" />

            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.60" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>