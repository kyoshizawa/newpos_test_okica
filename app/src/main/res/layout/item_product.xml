<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <import type="jp.mcapps.android.multi_payment_terminal.ui.Converters" />
        <variable
            name="Product"
            type="jp.mcapps.android.multi_payment_terminal.ui.pos.ProductCategorySelectModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_product_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/category_or_product_name"
            customFont='@{""}'
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:minLines="2"
            android:maxLines="10"
            android:text='@{Product.name, default="ああああああああああああああああああああああああああああああああああああああああ"}'
            android:textSize='19sp'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <!-- カテゴリ表示 -->
        <LinearLayout
            android:id="@+id/category_attribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintTop_toBottomOf="@id/category_or_product_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility='@{Product.isCategory ? View.VISIBLE : View.GONE, default="visible"}'
            >

            <TextView
                customFont='@{""}'
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="center"
                android:background="@drawable/pill_frame"
                android:backgroundTint="?attr/colorPrimary"
                android:text='カテゴリ'
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:src="@drawable/ic_baseline_arrow_forward_24"
                />

        </LinearLayout>

        <!-- 標品表示 -->
        <LinearLayout
            android:id="@+id/product_attribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="3dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintTop_toBottomOf="@id/category_or_product_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility='@{Product.isCategory ? View.GONE : View.VISIBLE, default="visible"}'
            >

            <TextView
                customFont='@{""}'
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:text='@{"￥" + Product.displayUnitPrice, default="￥999,999"}'
                android:textSize="27sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:padding="3dp"
                android:src="@drawable/ic_pos_cart_add"
                app:tint="@color/text_black"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="5dp"
            android:text='@{Product.code, default="コード"}'
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/product_attribute"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_or_product_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>