<?xml version="1.0" encoding="utf-8"?>
<!-- ADD-S BMT S.Oyama 2024/08/30 フタバ双方向向け改修 -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <import type="android.view.View" />

        <import type="jp.mcapps.android.multi_payment_terminal.AppPreference" />

        <variable
            name="handlers"
            type="jp.mcapps.android.multi_payment_terminal.ui.discount.DiscountFutabaDEventHandlers" />

        <variable
            name="viewModel"
            type="jp.mcapps.android.multi_payment_terminal.ui.discount.DiscountFutabaDViewModel" />

        <variable
            name="enumJobStatus"
            type="jp.mcapps.android.multi_payment_terminal.ui.discount.DiscountFutabaDViewModel.JOBSTATUS" />
    </data>

<!--
-->


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- カード挿入前画面 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility='@{(viewModel.JobStatus == enumJobStatus.Started) ? View.VISIBLE : View.GONE}'>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/header_lbl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_margin_large"
                    android:background="@drawable/stroke_gray"
                    android:gravity="center"
                    android:padding="@dimen/common_margin_large"
                    android:text='割引確認'
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/message_lbl1"
                    android:layout_width="match_parent"
                    android:layout_height="154dp"
                    android:layout_margin="@dimen/common_margin_large"
                    android:background="@drawable/stroke_gray"
                    android:gravity="center"
                    android:padding="@dimen/common_margin_large"
                    android:text='カードを通して下さい'
                    android:textSize="24sp" />
            </LinearLayout>

            <Button
                android:id="@+id/cancel_btn1"
                android:layout_width="150dp"
                android:layout_height="@dimen/common_btn_height"
                android:layout_gravity="bottom|right"
                android:layout_margin="@dimen/common_margin_large"
                android:backgroundTint="@color/btn_common_cancel"
                android:onClick='@{view -> handlers.onCancelClick(view,viewModel)}'
                android:text="戻る" />

            <Button
                android:id="@+id/btn_test01"
                android:layout_width="150dp"
                android:layout_height="@dimen/common_btn_height"
                android:layout_gravity="bottom|left"
                android:layout_margin="@dimen/common_margin_large"
                android:backgroundTint="@color/btn_common_enter"
                android:onClick='@{view -> handlers.onTestClick(view,viewModel)}'
                android:text="テスト" />
        </FrameLayout>

        <!-- センター通信中画面 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility='@{(viewModel.JobStatus == enumJobStatus.Connecting) ? View.VISIBLE : View.GONE}'>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/header_lbl2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_margin_large"
                    android:background="@drawable/stroke_gray"
                    android:gravity="center"
                    android:padding="@dimen/common_margin_large"
                    android:text='割引確認'
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/message_lbl2"
                    android:layout_width="match_parent"
                    android:layout_height="154dp"
                    android:layout_margin="@dimen/common_margin_large"
                    android:background="@drawable/stroke_gray"
                    android:gravity="center"
                    android:padding="@dimen/common_margin_large"
                    android:text='センター通信中'
                    android:textSize="24sp" />
                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center" />

            </LinearLayout>

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="150dp"
                android:layout_height="@dimen/common_btn_height"
                android:layout_gravity="bottom|right"
                android:layout_margin="@dimen/common_margin_large"
                android:backgroundTint="@color/btn_common_cancel"
                android:onClick='@{view -> handlers.onCancelClick(view,viewModel)}'
                android:text="キャンセル" />

            <Button
                android:id="@+id/btn_test02"
                android:layout_width="150dp"
                android:layout_height="@dimen/common_btn_height"
                android:layout_gravity="bottom|left"
                android:layout_margin="@dimen/common_margin_large"
                android:backgroundTint="@color/btn_common_enter"
                android:onClick='@{view -> handlers.onTestClick(view,viewModel)}'
                android:text="テスト" />

        </FrameLayout>


        <!-- 割引情報取得等失敗画面 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility='@{(viewModel.JobStatus == enumJobStatus.Error) ? View.VISIBLE : View.GONE}'
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/header_lbl3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_margin_large"
                    android:background="@drawable/stroke_gray"
                    android:gravity="center"
                    android:padding="@dimen/common_margin_large"
                    android:text='割引確認'
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/message_lbl3"
                    android:layout_width="match_parent"
                    android:layout_height="154dp"
                    android:layout_margin="@dimen/common_margin_large"
                    android:background="@drawable/stroke_gray"
                    android:gravity="center"
                    android:padding="@dimen/common_margin_large"
                    android:text='割引出来ません'
                    android:textSize="24sp" />
            </LinearLayout>

            <Button
                android:id="@+id/cancel_btn3"
                android:layout_width="150dp"
                android:layout_height="@dimen/common_btn_height"
                android:layout_gravity="bottom|right"
                android:layout_margin="@dimen/common_margin_large"
                android:backgroundTint="@color/btn_common_cancel"
                android:onClick='@{view -> handlers.onCancelClick(view,viewModel)}'
                android:text="戻る" />

            <Button
                android:id="@+id/btn_test03"
                android:layout_width="150dp"
                android:layout_height="@dimen/common_btn_height"
                android:layout_gravity="bottom|left"
                android:layout_margin="@dimen/common_margin_large"
                android:backgroundTint="@color/btn_common_enter"
                android:onClick='@{view -> handlers.onTestClick(view,viewModel)}'
                android:text="テスト" />

        </FrameLayout>

        <!-- 割引情報取得等成功画面 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility='@{(viewModel.JobStatus == enumJobStatus.Finish) ? View.VISIBLE : View.GONE}'>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/header_lbl4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_margin_large"
                    android:background="@drawable/stroke_gray"
                    android:gravity="center"
                    android:padding="@dimen/common_margin_large"
                    android:text='割引確認'
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/message_lbl4"
                    android:layout_width="match_parent"
                    android:layout_height="154dp"
                    android:layout_margin="@dimen/common_margin_large"
                    android:background="@drawable/stroke_gray"
                    android:gravity="center"
                    android:padding="@dimen/common_margin_large"
                    android:text='割引最終処理中'
                    android:textSize="24sp" />
            </LinearLayout>

            <Button
                android:id="@+id/cancel_btn4"
                android:layout_width="150dp"
                android:layout_height="@dimen/common_btn_height"
                android:layout_gravity="bottom|right"
                android:layout_margin="@dimen/common_margin_large"
                android:backgroundTint="@color/btn_common_cancel"
                android:onClick='@{view -> handlers.onCancelClick(view,viewModel)}'
                android:text="戻る" />

            <Button
                android:id="@+id/btn_test04"
                android:layout_width="150dp"
                android:layout_height="@dimen/common_btn_height"
                android:layout_gravity="bottom|left"
                android:layout_margin="@dimen/common_margin_large"
                android:backgroundTint="@color/btn_common_enter"
                android:onClick='@{view -> handlers.onTestClick(view,viewModel)}'
                android:text="テスト" />

        </FrameLayout>
    </FrameLayout>

</layout>
