<?xml version="1.0" encoding="utf-8"?>
<layout
    android:id="@+id/fragment_driver_code"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".ui.driver_code.DriverCodeFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <import type="jp.mcapps.android.multi_payment_terminal.ui.Converters" />
        <variable
            name="viewModel"
            type="jp.mcapps.android.multi_payment_terminal.ui.emoney.edy.EMoneyEdyViewModel" />
        <variable
            name="sharedViewModel"
            type="jp.mcapps.android.multi_payment_terminal.SharedViewModel" />
        <variable
            name="handlers"
            type="jp.mcapps.android.multi_payment_terminal.ui.emoney.edy.EMoneyEdyEventHandlers" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/emoney_head"
            android:name="jp.mcapps.android.multi_payment_terminal.ui.emoney.EmoneyHeadFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="460dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:tag="反転"
                android:background="@null"
                android:src="@drawable/ic_baseline_crop_rotate_36"
                android:onClick="@{handlers::onInversion}"
                android:layout_margin="@dimen/common_margin" />


            <!-- カードタッチ待ち -->
            <ImageView
                android:visibility='@{viewModel.isWaiting() || viewModel.isUnfinished() ? View.VISIBLE : View.GONE}'
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:src="@drawable/img_felica" />

            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:visibility='@{viewModel.isConnecting() ? View.VISIBLE : View.GONE}'
                android:layout_gravity="center"
                android:layout_width="180dp"
                android:layout_height="180dp" />

            <!-- 決済成功時 -->
            <ImageView
                android:visibility='@{viewModel.isCompleted() ? View.VISIBLE : View.GONE}'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_check_circle_outline_180"
                android:rotation='@{sharedViewModel.isScreenInversion ? 180 : 0}' />

            <!-- 決済エラー時 -->
            <ImageView
                android:visibility='@{viewModel.isNotEnough || viewModel.isError || viewModel.isForceBalance ? View.VISIBLE : View.GONE}'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_error_outline_180"
                android:rotation='@{sharedViewModel.isScreenInversion ? 180 : 0}' />


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin"
            android:rotation='@{sharedViewModel.isScreenInversion ? 180 : 0}'
            android:background="@drawable/stroke_gray">

            <TextView
                android:text='@{viewModel.lcd1 + "\n" + viewModel.lcd2 + "\n" + viewModel.lcd3}'
                android:minLines="3"
                android:maxLines="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility='@{!viewModel.isForceBalance &amp;&amp; !Converters.stringToBoolean(viewModel.displayMessage) ? View.VISIBLE : View.GONE}'
                android:textSize="22sp" />  <!-- 15文字のメッセージが一行に収まるサイズに調整 -->

            <TextView
                android:text='@{viewModel.displayMessage}'
                android:minLines="3"
                android:maxLines="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility='@{!viewModel.isForceBalance &amp;&amp; Converters.stringToBoolean(viewModel.displayMessage) ? View.VISIBLE : View.GONE}'
                android:textSize="24sp" />

            <TextView
                android:text="Edy取引は完了していません\n引き続き残額照会を行います\n"
                android:minLines="3"
                android:maxLines="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility='@{viewModel.isForceBalance ? View.VISIBLE : View.GONE}'
                android:textSize="24sp" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <!-- カードタッチ待ち or 残高不足時 -->
                <Button
                    android:id="@+id/btn_emoney_cancel"
                    android:layout_width="@dimen/common_btn_width"
                    android:layout_height="@dimen/common_btn_height"
                    android:onClick='@{handlers::onCancelClick}'
                    android:visibility='@{viewModel.cancelable &amp;&amp; (viewModel.isWaiting() || (viewModel.isNotEnough() &amp;&amp; viewModel.showWithCashAndCancelBtn)) ? View.VISIBLE : View.GONE}'
                    android:layout_gravity="center"
                    android:backgroundTint="@color/btn_common_cancel"
                    android:text="@string/cancel_button_label_string" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <!-- 決済成功時 -->
<!--                <Button-->
<!--                    android:layout_width="@dimen/common_btn_width"-->
<!--                    android:layout_height="@dimen/common_btn_height"-->
<!--                    android:onClick="@{handlers::onConfirmationClick}"-->
<!--                    android:visibility='@{viewModel.isCompleted() ? View.VISIBLE : View.GONE}'-->
<!--                    android:layout_gravity="center"-->
<!--                    android:text="@string/check" />-->

                <!-- 残高不足時 -->
                <Button
                    android:id="@+id/btn_emoney_cash_together"
                    android:layout_width="@dimen/common_btn_width"
                    android:layout_height="@dimen/common_btn_height"
                    android:onClick='@{handlers::onWithCashClick}'
                    android:visibility='@{(viewModel.isNotEnough &amp;&amp; viewModel.showWithCashAndCancelBtn) ? View.VISIBLE : View.GONE}'
                    android:layout_gravity="center"
                    android:text="現金併用" />

                <!-- 強制残額照会 -->
                <Button
                    android:layout_width="@dimen/common_btn_width"
                    android:layout_height="@dimen/common_btn_height"
                    android:onClick='@{handlers::onForceBalance}'
                    android:visibility='@{viewModel.isForceBalance ? View.VISIBLE : View.GONE}'
                    android:layout_gravity="center"
                    android:text="確認" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</layout>