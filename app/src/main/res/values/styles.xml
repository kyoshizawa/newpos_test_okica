<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ホーム画面用スタイル -->
    <style name="StyleHomeIconButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="StyleHomeIconButtonText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="StyleHomeIconButtonImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="StyleHomeButton">
        <item name="android:backgroundTint">#004D63</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- POS画面用スタイル -->
    <style name="StylePosIconButton" parent="StyleHomeIconButton">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>
    <style name="StylePosIconButtonText" parent="StyleHomeIconButtonText">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="StylePosIconButtonImage" parent="StyleHomeIconButtonImage">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <!-- チケット用スタイル -->
    <style name="StyleTicketIconButton" parent="StyleHomeIconButton">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
    <style name="StyleTicketIconButtonText">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <style name="StyleTicketIconButtonImage">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <!-- 自動つり銭機連動画面用スタイル（つり銭機画面） -->
    <style name="StyleCashchangerAmountUnitText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>
    <style name="StyleCashchangerAmountUnitTextForEmpty">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="StyleCashchangerAmountValueText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- 電子マネー画面用スタイル -->
    <style name="StyleEmoneyIconButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="StyleEmoneyIconButtonText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="StyleEmoneyIconButtonImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="StyleEmoneyButton">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- 残額照会画面用スタイル -->
    <style name="StyleBalanceIconButton" parent="StyleEmoneyIconButton">
        <item name="android:backgroundTint">@drawable/btn_balance</item>
    </style>
    <style name="StyleBalanceIconButtonText" parent="StyleEmoneyIconButtonText"/>
    <style name="StyleBalanceIconButtonImage" parent="StyleEmoneyIconButtonImage"/>
    <style name="StyleBalanceButton" parent="StyleEmoneyButton">
        <item name="android:backgroundTint">@color/menu_balance</item>
    </style>

    <!-- チャージ画面用スタイル -->
    <style name="StyleChargeIconButton" parent="StyleEmoneyIconButton">
        <item name="android:backgroundTint">@drawable/btn_charge</item>
    </style>
    <style name="StyleChargeIconButtonText" parent="StyleEmoneyIconButtonText"/>
    <style name="StyleChargeIconButtonImage" parent="StyleEmoneyIconButtonImage"/>
    <style name="StyleChargeButton" parent="StyleEmoneyButton">
        <item name="android:backgroundTint">@color/menu_charge</item>
    </style>

    <!-- その他決済画面用スタイル -->
    <style name="StyleOtherIconButton" parent="StyleEmoneyIconButton"/>
    <style name="StyleOtherIconButtonText" parent="StyleEmoneyIconButtonText"/>
    <style name="StyleOtherIconButtonImage" parent="StyleEmoneyIconButtonImage"/>
    <style name="StyleOtherButton" parent="StyleEmoneyButton" />

    <!-- 履歴画面用スタイル -->
    <style name="StyleHistoryButton" parent="StyleEmoneyButton">
        <item name="android:backgroundTint">#004D63</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!-- 業務画面用スタイル -->
    <style name="StyleBusinessButton" parent="StyleHistoryButton"/>
    <style name="StyleBusinessButtonDisabled" parent="StyleHistoryButton">
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 取引詳細画面用スタイル -->
    <style name="StyleTransactionDetail">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_margin">@dimen/common_margin_small</item>-->
    </style>

    <!-- デバイスチェック画面用スタイル -->
    <style name="StyleDeviceCheck">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/common_margin_small</item>
        <item name="android:layout_marginRight">@dimen/common_margin_small</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 端末情報画面用スタイル -->
    <style name="StyleInfoTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="StyleInfoSettingText" parent="StyleInfoTitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">@dimen/common_margin_small</item>
    </style>

    <!-- 集計表示画面用スタイル -->
    <style name="StyleAggregateTableText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <!-- 数字ボタン以外の標準スタイル -->
    <style name="StyleBasicButtonOther">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">@dimen/basic_number_btn_width</item>
        <item name="android:layout_height">@dimen/basic_number_btn_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:stateListAnimator">@null</item>>
        <item name="cornerRadius">@dimen/basic_number_btn_radius</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <!-- 数字ボタンの標準スタイル -->
    <style name="StyleBasicButtonNumber" parent="StyleBasicButtonOther">
        <item name="android:textSize">@dimen/basic_number_btn_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/bg_primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">3dp</item>
    </style>

    <!-- 金額入力画面のテキスト標準スタイル -->
    <style name="StyleAmountInputText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/basic_number_btn_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/common_margin</item>
        <item name="android:background">@drawable/stroke_gray</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/driver_code_text_size</item>
    </style>

    <!-- 手動明細ボタンスタイル -->
    <style name="manualInputPriceText">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">3dp</item>
    </style>
    <!-- 手動明細取消ボタンスタイル -->
    <style name="manualInputClearBtn">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/purple_200</item>
    </style>
</resources>
